<?xml version="1.0" encoding="utf-8"?>
<openerp>

    <data noupdate="1">
        <!-- Formato de Papel -->
        <record id="invoice_paperformat" model="report.paperformat">
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="header_spacing">35</field>
            <field name="margin_top">10</field>
            <field name="margin_right">7</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">7</field>
            <field name="header_line">False</field>
            <field name="name">US Letter Invoice</field>
            <field name="orientation">Portrait</field>
            <field name="dpi">90</field>
            <field name="default">True</field>
            <field name="format">Letter</field>
        </record>
    </data>

    <data>
        <!-- QWeb Reports -->
        <report 
            id="account_invoices_mx"
            model="account.invoice"
            string="Invoices CFDI"
            report_type="qweb-pdf"
            name="cfd_mx.report_invoice_mx"
            file="cfd_mx.report_invoice_mx"
            usage="default"
            header="False"
            attachment_use="True"
            attachment="(object.state in ('open','paid')) and ('INV'+(object.number or '').replace('/','')+'.pdf')" />

        <!--

        -->

        <record id="account_invoices_mx" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="cfd_mx.invoice_paperformat"/>
        </record>
        <record id="email_template_edi_invoice" model="mail.template">
            <field name="report_template" ref="cfd_mx.account_invoices_mx"/>
        </record>
    </data>


    <data>

        <template id="report_invoice_mx_document">
            <t t-call="report.html_container">
                <div class="page">

                    <div class="row">
                        <div class="col-xs-3">
                            <img t-if="o.company_id.logo" t-att-src="'data:image/png;base64,%s' % o.company_id.logo" class="img img-responsive" style="max-height:104px;"  />
                        </div>
                        <div class="col-xs-6">
                            <div class="bg_theme_color text-left">
                                <span class="fa fa-building-o"></span>
                                <strong t-field="o.company_id.partner_id.name" />
                            </div>
                            <div class="text-left" name="company_address">
                                <div t-field="o.company_id.partner_id" 
                                    t-field-options='{
                                        "widget": "contact", 
                                        "fields": ["address", "phone", "email", "vat", "website"], 
                                        "no_marker": false, "phone_icons": true}'
                                    class="company_address" />
                                <p t-if="o.company_id.partner_id.vat" class="company_address"><strong>RFC:</strong> <span t-field="o.company_id.partner_id.vat"/></p>
                                <p t-if="o.company_id.partner_id.regimen_id" class="company_address"><strong>Regimen:</strong> [<span t-field="o.company_id.partner_id.regimen_id.clave"/>] <span t-field="o.company_id.partner_id.regimen_id.name"/></p>
                            </div>
                        </div>
                        <div class="col-xs-3">
                            <div class="row font_inv">
                                <div class="col-xs-12 bg_theme_color text-left">
                                    <span class="fa fa-building-o"></span>
                                    <strong>Factura</strong>
                                </div>
                                <div class="col-xs-6"><strong>Serie</strong></div>
                                <div class="col-xs-6"><strong>Folio</strong></div>
                                
                                <div class="col-xs-6">
                                    <span t-field="o.journal_id.serie" />
                                </div>
                                <div class="col-xs-6">
                                    <span t-field="o.number" />
                                </div>
                                <div class="col-xs-12 bg_theme_color text-left">
                                    <strong>Fecha y Hora de Emisión</strong>
                                </div>
                                <div class="col-xs-12 text-left">
                                    <span t-field="o.date_invoice_cfdi" />
                                </div>
                                <div class="col-xs-12 bg_theme_color text-left">
                                    <strong>Lugar de Expedición</strong>
                                </div>
                                <div class="col-xs-12 text-left">
                                    <span t-field="o.journal_id.codigo_postal_id.name" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row font_inv">
                        <div class="col-xs-4">
                            <div class="row">
                                <div class="col-xs-12 bg_theme_color text-left">
                                    <strong>Información del Cliente</strong>
                                </div>
                                <div class="col-xs-12 text-left">
                                    <strong t-field="o.partner_id.name" />
                                    <div class="text-left" name="font_inv">
                                        <div t-field="o.partner_id" 
                                            t-field-options='{
                                                "widget": "contact", 
                                                "fields": ["address", "phone", "email", "vat", "website"], 
                                                "no_marker": false, "phone_icons": true}'
                                            class="font_inv" />
                                        <p t-if="o.partner_id.vat" class="font_inv"><strong>RFC: </strong> <span t-field="o.partner_id.vat"/></p>
                                        <p t-if="o.partner_id.ref" class="font_inv"><strong>Numero de Cliente:</strong> <span t-field="o.partner_id.ref"/></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-4">
                            <div class="row font_inv">
                                <div class="col-xs-12 bg_theme_color text-left">
                                    <strong>Uso del CFDI</strong>
                                </div>
                                <div class="col-xs-12">
                                    <span t-field="o.usocfdi_id.name" />
                                </div>
                                <div class="col-xs-12 bg_theme_color text-left">
                                    <strong>Moneda</strong>
                                </div>
                                <div class="col-xs-12 text-left">
                                    <span t-field="o.currency_id.name" />
                                </div>
                                <div class="col-xs-12 bg_theme_color text-left">
                                    <strong>Tipo de Cambio</strong>
                                </div>
                                <div class="col-xs-12 text-left">
                                    <span t-field="o.tipo_cambio" />
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-4">
                            <div class="row font_inv">
                                <div class="col-xs-12 bg_theme_color text-left">
                                    <strong>Información Adicional</strong>
                                </div>
                                <div class="col-xs-12">
                                    <strong>No. Certificado: </strong><span t-field="o.noCertificado" /> <br />
                                    <strong>Método de Pago: </strong><span t-field="o.metodopago_id.clave" /> - <span t-field="o.metodopago_id.name" /> <br />
                                    <strong>Forma de Pago: </strong><span t-field="o.formapago_id.clave" /> - <span t-field="o.formapago_id.name" /> <br />
                                    <strong>Condiciones de Pago: </strong><span t-field="o.payment_term_id.name" /><br />
                                </div>

                            </div>
                        </div>
                    </div>
                    <t t-set="ret" t-value="0.0" />
                    <t t-set="tras" t-value="0.0" />
                    <div class="row font_inv">
                        <div class="col-xs-12 bg_theme_color text-left">
                            <strong>CONCEPTOS DEL COMPROBANTE</strong>
                        </div>
                        <table class="table table-bordered table-sm event-table">
                            <tr>
                                <td class="bg_theme_color"><strong>C. Producto:</strong></td>
                                <td class="bg_theme_color"><strong>Descripción</strong></td>
                                <td class="bg_theme_color"><strong>C. Unidad</strong></td>
                                <td class="bg_theme_color"><strong>Unidad</strong></td>
                                <td class="bg_theme_color"><strong>V. Unitario</strong></td>
                                <td class="bg_theme_color"><strong>Importe</strong></td>
                                <td class="bg_theme_color"><strong>Descuento</strong></td>
                            </tr>
                            <t t-foreach="o.invoice_line_ids" t-as="l">
                                <tr> 
                                    <td class="border_top"><span t-field="l.product_id.clave_prodser_id.clave" /> </td>
                                    <td class="border_top"><span t-esc="l.name" /></td>
                                    <td class="border_top"><span t-field="l.uom_id.clave_unidadesmedida_id.clave" /></td>
                                    <td class="border_top"><span t-field="l.uom_id.name" /> </td>
                                    <td class="border_top"><span t-field="l.price_unit" /> </td>
                                    <td class="border_top"><span t-field="l.price_subtotal" /> </td>
                                    <td class="border_top"><span t-field="l.price_discount_sat" /> </td>
                                </tr>
                                <t t-set="taxs" t-value="l.get_impuestos_sat()" />
                                <t t-foreach="taxs" t-as="tax">
                                    <t t-if="len(tax)">
                                        <tr class="rowB2">
                                            <td colspan="7">
                                                <div class="row font_inv">
                                                    <div class="col-xs-4 text-left">Impuestos</div>
                                                    <div class="col-xs-8 text-left">
                                                        <table style="width:100%">
                                                            <tr>
                                                                <td><strong>Nombre</strong></td>
                                                                <td><strong>Impuesto</strong></td>
                                                                <td><strong>Tipo Factor</strong></td>
                                                                <td><strong>Tasa o Couta</strong></td>
                                                                <td><strong>Importe</strong></td>
                                                            </tr>
                                                            <t t-foreach="tax" t-as="t">
                                                                <t t-set="importe" t-value="t.get('Importe')" />

                                                                <t t-if="t.get('tipo') == 'ret' ">
                                                                    <t t-set="ret" t-value="ret + importe" />
                                                                </t>
                                                                <t t-if="t.get('tipo') == 'tras' ">
                                                                    <t t-set="tras" t-value="tras + importe" />
                                                                </t>
                                                                <tr>
                                                                    <td><span t-esc="t.get('Name')" /></td>
                                                                    <td><span t-esc="t.get('Impuesto')" /></td>
                                                                    <td><span t-esc="t.get('TipoFactor')" /></td>
                                                                    <td><span t-esc="t.get('TasaOCuota')" /></td>
                                                                    <td>$ <span t-esc="t.get('Importe')" /></td>
                                                                </tr>
                                                            </t>
                                                        </table>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </t>
                        </table>
                    </div>
                    <br />
                    <div class="row font_inv">
                        <table style="width:100%">
                            <tr>
                                <td class="bg_theme_color" style="width:20%"><strong>Subtotal</strong></td>
                                <td class="bg_theme_color" style="width:20%"><strong>Impuestos Trasladados</strong></td>
                                <td class="bg_theme_color" style="width:20%"><strong>Impuestos Retenidos</strong></td>
                                <td class="bg_theme_color" style="width:20%"><strong>Descuento</strong></td>
                                <td class="bg_theme_color" style="width:20%"><strong>Total</strong></td>
                            </tr>
                            <tr>
                                <td class="text-right" style="width:20%"><span t-field="o.price_subtotal_sat" /> </td>
                                <td class="text-right" style="width:20%">$ <span t-esc="tras" /></td>
                                <td class="text-right" style="width:20%">$ <span t-esc="ret" /></td>
                                <td class="text-right" style="width:20%"><span t-field="o.price_discount_sat" /> </td>
                                <td class="text-right" style="width:20%">$ <span t-esc="o.price_subtotal_sat - o.price_discount_sat + o.price_tax_sat" /> </td>
                            </tr>
                        </table>
                    </div>
                    <br />
                    <div class="row font_inv">
                        <div class="col-xs-12 bg_theme_color text-left">
                            <strong>TIMBRE FISCAL</strong>
                        </div>
                        <div class="col-xs-3 bg_theme_color text-left"><strong>PAC</strong></div>
                        <div class="col-xs-3 bg_theme_color text-left"><strong>Folios Fiscal</strong></div>
                        <div class="col-xs-3 bg_theme_color text-left"><strong>No. Certificado SAT</strong></div>
                        <div class="col-xs-3 bg_theme_color text-left"><strong>Fecha y Hora de Certificación</strong></div>
                        
                        <div class="col-xs-3 text-left"><span t-field="o.company_id.cfd_mx_pac" /> </div>
                        <div class="col-xs-3 text-left"><span t-field="o.uuid" /> </div>
                        <div class="col-xs-3 text-left"><span t-field="o.certificado_sat" /></div>
                        <div class="col-xs-3 text-left"><span t-field="o.fecha_timbrado"  /></div>
                    </div>
                    <br />
                    <div class="row font_inv">
                        <div class="col-xs-3 text-left">
                            <img t-if="o.qrcode" t-att-src="'data:image/png;base64,%s' % o.qrcode" style="vertical-align: text-top; width:140px!important;height:140px!important;"/>
                        </div>
                        <div class="col-xs-3 text-left">
                            <div class="row font_inv">
                                <div class="col-xs-12 text-left bg_theme_color">
                                    <span>Sello Digital del Emisor</span>
                                </div>
                                <div class="col-xs-12 text-left">
                                    <code style="font-size: 6px:"><span style="font-size: 6px:" t-field="o.sello" /></code>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-3 text-left">
                            <div class="row font_inv">
                                <div class="col-xs-12 text-left bg_theme_color">
                                    <span>Sello Digital del SAT</span>
                                </div>
                                <div class="col-xs-12 text-left">
                                    <code style="font-size: 6px:" ><span style="font-size: 6px:" t-field="o.sello_sat" /></code>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-3 text-left">
                            <div class="row font_inv">
                                <div class="col-xs-12 text-left bg_theme_color">
                                    <span>Cadena Original</span>
                                </div>
                                <div class="col-xs-12 text-left">
                                    <code style="font-size: 6px:" ><span style="font-size: 6px:" t-field="o.cadena_sat" /></code>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>


        <template id="report_invoice_mx">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="cfd_mx.report_invoice_mx_document" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>

    </data>

</openerp>